{% extends 'base.html.twig' %}

{% block title %}
    {% trans %}Participants{% endtrans %}
{% endblock %}

{% block body %}
    {% for message in app.flashes('remove_user') %}
        <div class="alert">
            {{ message }}
        </div>
    {% endfor %}
    <h2 class="page-title center-align">
        {% trans %}Participants{% endtrans %}
    </h2>
    <div class="page-actions">
        <a class="btn--action btn blue darken-3 filter-toggle-button">
            {% trans %}Filter{% endtrans %}
        </a>
        {% include 'profile/filters.html.twig' with {'search_path': 'profile.participants.search'} %}
    </div>
    <div class="border-shadow">
        {% if users|length > 0 %}
            {% include 'profile/list.html.twig' with {'role': 'participants'}  %}
        {% else %}
            <h5>{% trans %}No participants found{% endtrans %}</h5>
        {% endif %}
    </div>
{% endblock %}

