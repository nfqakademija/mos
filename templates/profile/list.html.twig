<div class="border-shadow">
    <table class="table highlight">
        <thead>
        <tr>
            <th scope="col" class="s-hide">#</th>
            <th scope="col">
                {% trans %}Name{% endtrans %}
            </th>
            <th scope="col">
                {% trans %}Surname{% endtrans %}
            </th>
            {% if role == 'staff' %}
                <th scope="col" class="s-hide">
                    {% trans %}RolÄ—{% endtrans %}
                </th>
            {% else %}
                <th scope="col" class="s-hide">
                    {% trans %}Group{% endtrans %}
                </th>
            {% endif %}
            <th scope="col"></th>
        </tr>
        </thead>
        {% for user in users %}
            <tr>
                <td class="s-hide">{{ user.id }}</td>
                <td>{{ user.name }}</td>
                <td>{{ user.surname }}</td>
                {% if role == 'staff' %}
                    <td class="s-hide">
                        {{ user.roles[0]|trans }}
                    </td>
                {% else %}
                    <td class="s-hide">
                        <a href="{{ path('group.view', {'group': user.learningGroup.id}) }}">
                            {{ user.learningGroup.id }}
                        </a>
                    </td>
                {% endif %}
                <td>
                    <a href="{{ path('profile.view.user', {'user': user.id}) }}">
                        {% trans %}View{% endtrans %}
                    </a>
                </td>
            </tr>
        {% endfor %}
    </table>
</div>

{% block pager %}
    {% include 'helper/pager.html.twig' with { 'content': users } only %}
{% endblock %}