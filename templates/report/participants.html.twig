{% extends 'base.html.twig' %}

{% block title %}Report view{% endblock %}


{% block body %}

    <h1>Report: Participants</h1>
    <table>
        <tr>
            <th>Name</th>
            <th>Surname</th>
            <th>Birth date</th>
            <th>Region/city</th>
            <th>Living area type</th>
            <th>Address</th>
            <th>Phone number</th>
            <th>Email</th>
            <th>Gender</th>
            <th>Course start date</th>
            <th>Course end date</th>
            <th>Group Id</th>
            <th>Successfully finished</th>

        </tr>
        
        {% for result in results %}
            <tr>
                <td>{{ result.name }}</td>
                <td>{{ result.surname }}</td>
                <td>{{ result.birthDate ? result.birthDate|date('Y-m-d') }}</td>
                <td>{{ result.region }}</td>
                <td>{{ result.livingAreaType }}</td>
                <td>{{ result.address }}</td>
                <td>{{ result.phone }}</td>
                <td>{{ result.email }}</td>
                <td>{{ result.gender }}</td>
                <td>{{ result.startDate ? result.startDate|date('Y-m-d') }}</td>
                <td>{{ result.endDate ? result.endDate|date('Y-m-d') }}</td>
                <td>{{ result.groupId }}</td>
                <td></td>
            </tr>
            
        {% endfor %}
        
    </table>

{% endblock %}
