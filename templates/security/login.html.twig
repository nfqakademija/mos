{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}

<div class="example-wrapper">
    <h2 class="center-align">Login</h2>

    {% if error %}
      <span class="alert-danger">{{ error.messageKey }}</span>
    {% endif %}

    <form action="{{ path('login') }}" method="POST" >
        <input type="text" name="_username" value="{{ last_username }}" placeholder="Username">
        <input type="password" name="_password" placeholder="password" >
        <button class="btn blue darken-3" type="submit">Login</button>
    </form>

</div>
{% endblock %}
