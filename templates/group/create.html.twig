{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    {{ form_start(form) }}
    {{ form_row(form.address) }}

    <h3>Participants</h3>
    <ul class="participants" data-prototype="{{ form_widget(form.participants.vars.prototype)|e('html_attr') }}">
        {% for participant in form.participants %}
            <li>{{ form_row(participant.name) }} {{ form_row(participant.surname) }}</li>
        {% endfor %}
    </ul>
    {{ form_end(form) }}
{% endblock %}
