{% extends 'base.html.twig' %}

{% block title %}Group{% endblock %}

{% block body %}
    {% for message in app.flashes('edit') %}
        <div class="alert alert--success">
            {{ message }}
        </div>
    {% endfor %}
    <h2 class="center-align">{% trans %}Group{% endtrans %}</h2>
    <a class="btn blue darken-3" href="{{ path('group.edit', {'group': group.id}) }}">
        Edit
    </a>
    <h4>Information</h4>
    <table class="table">
        <thead>
        <tr>
            <th scope="col">{% trans %}Address{% endtrans %}</th>
        </tr>
        </thead>
        <tr>
            <td>{{ group.address }}</td>
        </tr>
    </table>
    <h4>{% trans %}Time slots{% endtrans %}</h4>
    <table class="table">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">{% trans %}Date{% endtrans %}</th>
            <th scope="col">{% trans %}Start time{% endtrans %}</th>
            <th scope="col">{% trans %}Duration (minutes){% endtrans %}</th>
        </tr>
        </thead>
        {% for timeSlot in group.timeslots %}
            <tr>
                <th scope="row">{{ loop.index }}</th>
                <td>{{ timeSlot.date }}</td>
                <td>{{ timeSlot.startTime }}</td>
                <td>{{ timeSlot.duration }}</td>
            </tr>
        {% endfor %}
    </table>
    <h4>{% trans %}Participants{% endtrans %}</h4>
    <table class="table">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">{% trans %}Name{% endtrans %}</th>
            <th scope="col">{% trans %}Surname{% endtrans %}</th>
            <th scope="col">{% trans %}Username{% endtrans %}</th>
            <th scope="col">{% trans %}Birth date{% endtrans %}</th>
        </tr>
        </thead>
        {% for participant in group.participants %}
            <tr>
                <th scope="row">{{ loop.index }}</th>
                <td>{{ participant.name }}</td>
                <td>{{ participant.surname }}</td>
                <td>{{ participant.username }}</td>
                <td>{{ participant.birth_date }}</td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}
