<table class="table highlight">
  <thead>
  <tr>
    <th scope="col">#</th>
    <th scope="col">
      {% trans %}Address{% endtrans %}
    </th>
    <th scope="col" class="s-hide">
      {% trans %}Start date{% endtrans %}
    </th>
    <th scope="col" class="s-hide">
      {% trans %}End date{% endtrans %}
    </th>
    <th scope="col">
      {% trans %}Schedule{% endtrans %}
    </th>
  </tr>
  </thead>
  {% for group in groups %}
    <tr>
      <td scope="row">{{ group.id }}</td>
      <td>
        <a href="{{ path('group.view', {'group': group.id}) }}">
          {{ group.address }}, {{ group.region.title }}
        </a>
      </td>
      <td class="s-hide">
        {{ group.startDate ? group.startDate|date('Y-m-d') }}
      </td>
      <td class="s-hide">
        {{ group.endDate ? group.endDate|date('Y-m-d') }}
      </td>
      <td class="s-hide">
        {% set timeSlots = group.timeSlots %}
        {% for timeSlot in timeSlots %}
          {% if timeSlot.date|date('Y-m-d') == date('today')|date('Y-m-d') %}
            <strong>{{ timeSlot.date|date('d') }} d. {{ timeSlot.startTime|date('H:i') }}</strong>
            {% else %}
                {{ timeSlot.date|date('d') }} d. {{ timeSlot.startTime|date('H:i') }}
          {% endif %}
          <br>
        {% endfor %}
      </td>
    </tr>
  {% endfor %}
</table>